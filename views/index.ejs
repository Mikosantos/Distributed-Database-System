<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DB Concurrency & Recovery</title>
    <link rel="stylesheet" href="/styles/index.css">
</head>
<body>
    <h1 class="title">STREAM GAME MANAGEMENT</h1>
    <div class="nodeHeader">
        <div class="nodeContainer">
            <button type="button" class="node1">Node 1</button>
            <button type="button" class="node2">Node 2</button>
            <button type="button" class="node3">Node 3</button>
        </div>
        <p id="nodeSelected" style="font-size: 18px; color: #FBFADA"></p>
    </div>
    
    <div class="container">
        <div class="create">
            <a href="/create" id="create">
                <!-- CREATE -->
                <svg xmlns="http://www.w3.org/2000/svg" width="96" height="96" viewBox="0 0 48 48">
                    <g fill="none" stroke="white" stroke-linejoin="round" stroke-width="4">
                        <path d="M44 28H28v16h16zM13 4l9 16H4zm23 16a8 8 0 1 0 0-16a8 8 0 0 0 0 16Z" />
                        <path stroke-linecap="round" d="m4 28l16 16m0-16L4 44" />
                    </g>
                </svg>
            </a>
            <h1 class="subtitle">Add Game</h1>
        </div>
        <div class="search">
            <a href="/search" id="read">
                <!-- READ -->
                <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" viewBox="0 0 24 24">
                    <g fill="none" stroke="white" stroke-width="2">
                        <circle cx="11" cy="11" r="7" />
                        <path stroke-linecap="round" d="M11 8a3 3 0 0 0-3 3m12 9l-3-3" />
                    </g>
                </svg>
            </a>
            <h1 class="subtitle">Search Game</h1>
        </div>
        <div class="update">
            <a href="/update" id="update">
                <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" viewBox="0 0 24 24">
                    <g fill="none" stroke="white" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                        <path d="M7 7H6a2 2 0 0 0-2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2-2v-1" />
                        <path d="M20.385 6.585a2.1 2.1 0 0 0-2.97-2.97L9 12v3h3zM16 5l3 3" />
                    </g>
                </svg>
            </a>
            <h1 class="subtitle">Edit Game</h1>
        </div>
        <div class="delete">
            <a href="/delete" id="delete">
                <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" viewBox="0 0 24 24">
                    <path fill="white" d="M7 4a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v2h4a1 1 0 1 1 0 2h-1.069l-.867 12.142A2 2 0 0 1 17.069 22H6.93a2 2 0 0 1-1.995-1.858L4.07 8H3a1 1 0 0 1 0-2h4zm2 2h6V4H9zM6.074 8l.857 12H17.07l.857-12zM10 10a1 1 0 0 1 1 1v6a1 1 0 1 1-2 0v-6a1 1 0 0 1 1-1m4 0a1 1 0 0 1 1 1v6a1 1 0 1 1-2 0v-6a1 1 0 0 1 1-1" />
                    
                </svg>
            </a>
            <h1 class="subtitle">Delete Game</h1>
        </div>
        
    </div>
</body>
</html>

<script>
    const buttons = document.querySelectorAll('.nodeContainer button');
    const nodeSelected = document.getElementById('nodeSelected');

    buttons.forEach(button => {
        button.addEventListener('click', () => {
            const nodeName = button.textContent;
            nodeSelected.textContent = `You have selected: ${nodeName}`;
        });
    });

</script>