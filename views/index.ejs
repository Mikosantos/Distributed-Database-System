<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Steam Game Management</title>
    <link rel="stylesheet" href="/styles/index.css">
</head>
<body>
    <h1 class="title">Steam Game Management</h1>
   
    <div class="container">
        <div class="create">
            <a href="/create" id="create">
                <!-- CREATE -->
                <svg xmlns="http://www.w3.org/2000/svg" width="96" height="96" viewBox="0 0 48 48">
                    <g fill="none" stroke="white" stroke-linejoin="round" stroke-width="4">
                        <path d="M44 28H28v16h16zM13 4l9 16H4zm23 16a8 8 0 1 0 0-16a8 8 0 0 0 0 16Z" />
                        <path stroke-linecap="round" d="m4 28l16 16m0-16L4 44" />
                    </g>
                </svg>
            </a>
            <h1 class="subtitle">Add Game</h1>
        </div>
        <div class="search">
            <a href="/search" id="read">
                <!-- READ -->
                <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" viewBox="0 0 24 24">
                    <g fill="none" stroke="white" stroke-width="2">
                        <circle cx="11" cy="11" r="7" />
                        <path stroke-linecap="round" d="M11 8a3 3 0 0 0-3 3m12 9l-3-3" />
                    </g>
                </svg>
            </a>
            <h1 class="subtitle">Search Game</h1>
        </div>
        <div class="update">
            <a href="/update" id="update">
                <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" viewBox="0 0 24 24">
                    <g fill="none" stroke="white" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                        <path d="M7 7H6a2 2 0 0 0-2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2-2v-1" />
                        <path d="M20.385 6.585a2.1 2.1 0 0 0-2.97-2.97L9 12v3h3zM16 5l3 3" />
                    </g>
                </svg>
            </a>
            <h1 class="subtitle">Edit Game</h1>
        </div>
        <div class="report">
            <a href="/report" id="report">
                <svg xmlns="http://www.w3.org/2000/svg" width="130" height="130" viewBox="0 0 24 24"><path fill="white" d="M17.45 15.18L22 7.31V21H2V3h2v12.54L9.5 6L16 9.78l4.24-7.33l1.73 1l-5.23 9.05l-6.51-3.75L4.31 19h2.26l4.39-7.56z"/></svg>            <h1 class="subtitle">Available Report</h1>
            </a>
        </div>
        
    </div>
</body>
</html>

<script>
    const buttons = document.querySelectorAll('.nodeContainer button');
    const nodeSelected = document.getElementById('nodeSelected');

    buttons.forEach(button => {
        button.addEventListener('click', () => {
            const nodeName = button.textContent;
            nodeSelected.textContent = `You have selected: ${nodeName}`;
        });
    });

</script>